<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <base-config>
    <trust-anchors>
      <certificates src="system" />
    </trust-anchors>
  </base-config>

  <!-- Allow cleartext to localhost for dev/bridge scenarios -->
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="false">localhost</domain>
  </domain-config>

  <!-- Ensure Google accounts and gstatic are allowed over HTTPS -->
  <domain-config cleartextTrafficPermitted="false">
    <domain includeSubdomains="true">accounts.google.com</domain>
    <domain includeSubdomains="true">gstatic.com</domain>
  </domain-config>
</network-security-config>
